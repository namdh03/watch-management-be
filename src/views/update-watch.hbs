{{setVar 'i' (parseJSON (getFlashMessages 'info'))}}
{{setVar 'e' (parseJSON (getFlashMessages 'error'))}}
{{setVar 'watchName' i.watchName}}
{{setVar 'image' i.image}}
{{setVar 'price' i.price}}
{{setVar 'brandId' i.brandId}}
{{setVar 'automatic' i.automatic}}
{{setVar 'watchDescription' i.watchDescription}}
{{setVar 'watchNameError' e.error.watchName.msg}}
{{setVar 'imageError' e.error.image.msg}}
{{setVar 'priceError' e.error.price.msg}}
{{setVar 'brandIdError' e.error.brandId.msg}}
{{setVar 'automaticError' e.error.automatic.msg}}
{{setVar 'watchDescriptionError' e.error.watchDescription.msg}}
{{setVar 'message' e.message}}

{{#if message}}
  <div
    id='toast-danger'
    class='fixed top-5 right-5 z-40 flex items-center w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800'
    role='alert'
  >
    <div
      class='inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-red-500 bg-red-100 rounded-lg dark:bg-red-800 dark:text-red-200'
    >
      <svg
        class='w-5 h-5'
        aria-hidden='true'
        xmlns='http://www.w3.org/2000/svg'
        fill='currentColor'
        viewBox='0 0 20 20'
      >
        <path
          d='M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 11.793a1 1 0 1 1-1.414 1.414L10 11.414l-2.293 2.293a1 1 0 0 1-1.414-1.414L8.586 10 6.293 7.707a1 1 0 0 1 1.414-1.414L10 8.586l2.293-2.293a1 1 0 0 1 1.414 1.414L11.414 10l2.293 2.293Z'
        />
      </svg>
      <span class='sr-only'>Error icon</span>
    </div>
    <div class='ms-3 text-sm font-normal'>{{message}}</div>
    <button
      type='button'
      class='ms-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700'
      data-dismiss-target='#toast-danger'
      aria-label='Close'
    >
      <span class='sr-only'>Close</span>
      <svg class='w-3 h-3' aria-hidden='true' xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 14 14'>
        <path
          stroke='currentColor'
          stroke-linecap='round'
          stroke-linejoin='round'
          stroke-width='2'
          d='m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6'
        />
      </svg>
    </button>
  </div>
{{/if}}

<section class='bg-white dark:bg-gray-900'>
  <div class='py-8 px-4 mx-auto max-w-2xl lg:py-16'>
    <h2 class='mb-4 text-xl font-bold text-gray-900 dark:text-white'>Update a watch</h2>
    <form id='watch-form' action='/admin/watches/update/{{watch.id}}?_method=PUT' method='POST'>
      <div class='grid gap-4 mb-4 sm:grid-cols-2 sm:gap-6 sm:mb-5'>
        <div class='sm:col-span-2'>
          <label for='watch-name' class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'>Watch Name</label>
          {{#if watchName}}
            <input
              value='{{watchName}}'
              type='text'
              name='watchName'
              id='watch-name'
              class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'
              placeholder='Type watch name'
              required=''
            />
          {{else}}
            <input
              value='{{watch.watchName}}'
              type='text'
              name='watchName'
              id='watch-name'
              class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'
              placeholder='Type watch name'
              required=''
            />
          {{/if}}
          <p class='mt-2 text-xs text-red-600 dark:text-red-400'>
            {{watchNameError}}
          </p>
        </div>
        <div class='w-full'>
          <label for='image' class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'>Image</label>

          {{#if image}}
            <input
              value='{{image}}'
              type='text'
              name='image'
              id='image'
              class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'
              placeholder='Watch image'
              required=''
            />
          {{else}}
            <input
              value='{{watch.image}}'
              type='text'
              name='image'
              id='image'
              class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'
              placeholder='Watch image'
              required=''
            />
          {{/if}}

          <p class='mt-2 text-xs text-red-600 dark:text-red-400'>
            {{imageError}}
          </p>
        </div>
        <div class='w-full'>
          <label for='price' class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'>Price</label>
          {{#if price}}
            <input
              value='{{price}}'
              type='number'
              name='price'
              id='price'
              class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'
              placeholder='$2999'
              required=''
            />
          {{else}}
            <input
              value='{{watch.price}}'
              type='number'
              name='price'
              id='price'
              class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'
              placeholder='$2999'
              required=''
            />
          {{/if}}

          <p class='mt-2 text-xs text-red-600 dark:text-red-400'>
            {{priceError}}
          </p>
        </div>
        <div>
          <label for='brandId' class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'>Brand</label>
          <select
            id='brandId'
            name='brandId'
            class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'
          >
            <option selected='' disabled>Select brand</option>
            {{#each brands}}
              {{#if ../brandId}}
                {{#ifEquals this.id ../brandId}}
                  <option value='{{this._id}}' selected>{{this.brandName}}</option>
                {{else}}
                  <option value='{{this._id}}'>{{this.brandName}}</option>
                {{/ifEquals}}
              {{else}}
                {{#ifEquals this.id ../watch.brand.id}}
                  <option value='{{this._id}}' selected>{{this.brandName}}</option>
                {{else}}
                  <option value='{{this._id}}'>{{this.brandName}}</option>
                {{/ifEquals}}
              {{/if}}

            {{/each}}
          </select>
          <p class='mt-2 text-xs text-red-600 dark:text-red-400'>
            {{brandIdError}}
          </p>
        </div>
        <div class='flex items-center mt-7'>
          <label class='inline-flex items-center cursor-pointer'>
            {{#if automatic}}
              {{#ifEquals automatic 'true'}}
                <input type='checkbox' class='sr-only peer' name='automatic' checked />
              {{else}}
                <input type='checkbox' class='sr-only peer' name='automatic' />
              {{/ifEquals}}
            {{else}}
              {{#ifEquals watch.automatic true}}
                <input type='checkbox' class='sr-only peer' name='automatic' checked />
              {{else}}
                <input type='checkbox' class='sr-only peer' name='automatic' />
              {{/ifEquals}}
            {{/if}}

            <div
              class="relative w-14 h-7 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[4px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"
            ></div>
            <span class='ms-3 text-sm font-medium text-gray-900 dark:text-gray-300'>Automatic toggle</span>
          </label>
          <p class='mt-2 text-xs text-red-600 dark:text-red-400'>
            {{automaticError}}
          </p>
        </div>
        <div class='sm:col-span-2'>
          <label for='watch-description' class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'>
            Description
          </label>
          {{#if watchDescription}}
            <textarea
              id='watch-description'
              name='watchDescription'
              rows='8'
              class='block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'
              placeholder='Your description here'
            >{{watchDescription}}</textarea>
          {{else}}
            <textarea
              id='watch-description'
              name='watchDescription'
              rows='8'
              class='block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500'
              placeholder='Your description here'
            >{{watch.watchDescription}}</textarea>
          {{/if}}
          <p class='mt-2 text-xs text-red-600 dark:text-red-400'>
            {{watchDescriptionError}}
          </p>
        </div>
      </div>
      <div class='flex items-center space-x-4'>
        <button
          type='submit'
          class='text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800'
        >
          Update watch
        </button>

        <!-- Modal toggle -->
        <div class='flex justify-center'>
          <button
            id='deleteButton'
            data-modal-target='deleteModal'
            data-modal-toggle='deleteModal'
            type='button'
            class='text-red-600 inline-flex items-center hover:text-white border border-red-600 hover:bg-red-600 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:border-red-500 dark:text-red-500 dark:hover:text-white dark:hover:bg-red-600 dark:focus:ring-red-900'
          >
            <svg
              class='w-5 h-5 mr-1 -ml-1'
              fill='currentColor'
              viewBox='0 0 20 20'
              xmlns='http://www.w3.org/2000/svg'
            ><path
                fill-rule='evenodd'
                d='M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z'
                clip-rule='evenodd'
              ></path></svg>
            Delete
          </button>
        </div>
      </div>
    </form>
    
    <!-- Main modal -->
    <div
      id='deleteModal'
      tabindex='-1'
      aria-hidden='true'
      class='hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-modal md:h-full'
    >
      <div class='relative p-4 w-full max-w-md h-full md:h-auto'>
        <!-- Modal content -->
        <div class='relative p-4 text-center bg-white rounded-lg shadow dark:bg-gray-800 sm:p-5'>
          <button
            type='button'
            class='text-gray-400 absolute top-2.5 right-2.5 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white'
            data-modal-toggle='deleteModal'
          >
            <svg
              aria-hidden='true'
              class='w-5 h-5'
              fill='currentColor'
              viewBox='0 0 20 20'
              xmlns='http://www.w3.org/2000/svg'
            ><path
                fill-rule='evenodd'
                d='M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z'
                clip-rule='evenodd'
              ></path></svg>
            <span class='sr-only'>Close modal</span>
          </button>
          <svg
            class='text-gray-400 dark:text-gray-500 w-11 h-11 mb-3.5 mx-auto'
            aria-hidden='true'
            fill='currentColor'
            viewBox='0 0 20 20'
            xmlns='http://www.w3.org/2000/svg'
          ><path
              fill-rule='evenodd'
              d='M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z'
              clip-rule='evenodd'
            ></path></svg>
          <p class='mb-4 text-gray-500 dark:text-gray-300'>Are you sure you want to delete this item?</p>
          <div class='flex justify-center items-center space-x-4'>
            <button
              data-modal-toggle='deleteModal'
              type='button'
              class='py-2 px-3 text-sm font-medium text-gray-500 bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-primary-300 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600'
            >
              No, cancel
            </button>
            <form action='/admin/watches/delete/{{watch._id}}?_method=DELETE' method='POST' class='m-0'>
              <button
                type='submit'
                class='py-2 px-3 text-sm font-medium text-center text-white bg-red-600 rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-900'
              >
                Yes, I'm sure
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.getElementById('watch-form').addEventListener('submit', function(event) { var checkbox =
  document.querySelector('input[name="automatic"]'); var hiddenInput = document.createElement('input'); hiddenInput.type
  = 'hidden'; hiddenInput.name = 'automatic'; hiddenInput.value = checkbox.checked ? 'true' : 'false';
  this.appendChild(hiddenInput); checkbox.disabled = true; });
</script>